<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_NET_MAUI_Controls.Pages.CommonControls"
             Title="CommonControls"
             BackgroundColor="#EAEEFA">
    <ScrollView>
        <VerticalStackLayout>
            <Frame BackgroundColor="#EAEEFA" Margin="10">
                <VerticalStackLayout>
                    <Image Source="dotnet_bot.svg" HeightRequest="100"/>
                    <Label
                        Text="Coding Droplets"
                        TextColor="#F44245"
                        HorizontalTextAlignment="Center"
                        FontSize="20"
                        FontAttributes="Bold"
                        Margin="10"/>
                </VerticalStackLayout>
            </Frame>
            <Frame BackgroundColor="#EAEEFA" Margin="10">
                <Border Padding="10" StrokeThickness="5" Stroke="Red" BackgroundColor="#EAEEFA">
                    <Label Text="Welcome" HorizontalTextAlignment="Center"></Label>
                </Border>
            </Frame>
            <WebView Source="https://google.com/"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
